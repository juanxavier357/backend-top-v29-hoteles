// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id               String   @id @default(cuid())
  name             String
  email            String   @unique
  password         String
  registrationDate DateTime @default(now())

  reservations reservations[]
}

model hotels {
  id          String         @id @default(cuid())
  hotel       String
  about       String
  checkIn     DateTime
  checkOut    DateTime
  guests      Int
  location    locations[]
  image       images[]
  room        rooms[]
  facility    facilities[]
  contactInfo contactInfos[]
  reservation reservations[]
}

model locations {
  id      String   @id @default(cuid())
  city    String
  latLng  String?
  address String
  hotel   hotels[]
}

model images {
  id       String @id @default(cuid())
  url      String
  hotel    hotels @relation(fields: [hotelsId], references: [id])
  hotelsId String
}

model rooms {
  id            String      @id @default(cuid())
  title         String
  description   String
  pricePerNight Float
  hotel         hotels      @relation(fields: [hotelsId], references: [id])
  hotelsId      String
  amenities     amenities[]
}

model facilities {
  id       String @id @default(cuid())
  name     String
  hotel    hotels @relation(fields: [hotelsId], references: [id])
  hotelsId String
}

model amenities {
  id      String @id @default(cuid())
  name    String
  room    rooms  @relation(fields: [roomsId], references: [id])
  roomsId String
}

model contactInfos {
  id       String @id @default(cuid())
  name     String
  email    String
  phone    String
  hotel    hotels @relation(fields: [hotelsId], references: [id])
  hotelsId String
}

model reservations {
  id            String   @id @default(cuid())
  startDate     DateTime
  endDate       DateTime
  paymentStatus Boolean

  user     users  @relation(fields: [usersId], references: [id])
  hotel    hotels @relation(fields: [hotelsId], references: [id])
  usersId  String
  hotelsId String
}
