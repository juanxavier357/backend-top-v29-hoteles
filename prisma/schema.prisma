// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model hotels {
  id            String       @id @default(cuid())
  title         String
  about         String
  location      locations    @relation(fields: [locationsId], references: [id])
  contactInfo   contactInfos @relation(fields: [contactInfosId], references: [id])
  locationsId    String
  contactInfosId String
  image         images[]

  // One-to-many relationship with Rooms
  room rooms[]

  // One-to-many relationship with Facilities
  facility facilities[]
}

model locations {
  id      String   @id @default(cuid())
  city    String
  lat_lng String?
  address String
  hotel   hotels[]
}

model contactInfos {
  id    String   @id @default(cuid())
  name  String
  email String
  phone String
  hotel hotels[]
}

model images {
  id      String @id @default(cuid())
  url     String
  hotel   hotels @relation(fields: [hotelsId], references: [id])
  hotelsId String
}

model rooms {
  id          String @id @default(cuid())
  number_beds Int
  price_night Float
  hotel       hotels @relation(fields: [hotelsId], references: [id])
  hotelsId     String
}

model facilities {
  id      String @id @default(cuid())
  name    String
  hotel   hotels @relation(fields: [hotelsId], references: [id])
  hotelsId String
}
